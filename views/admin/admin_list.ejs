<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>List of Admins</title>

        <!-- Link to Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
    </head>
    <body>
       

        <div class="container mt-4">
            <h2>Admin Dashboard</h2>
            <div class="row mt-3">
                <div class="col-md-12">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% admins.forEach(function(admin) { %>
                            <tr>
                                <td><%= admin.firstName%></td>
                                <td><%= admin.lastName %></td>
                                <td><%= admin.email %></td>
                                <td><%= admin.role %></td>
                                <td>
                                    <a
                                        href="/admin/byId/<%= admin._id %>"
                                        class="btn btn-primary btn-sm"
                                        >View</a
                                    >
                                    <a
                                        href="/admin/<%= admin._id %>/edit"
                                        class="btn btn-primary btn-sm"
                                        >Edit</a
                                    >

                                    <a
                                        href="/admin/<%= admin._id %>/delete"
                                        class="btn btn-primary btn-sm"
                                        >Delete</a
                                    >
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div>
            <a href="/admin/create" class="btn btn-danger"
                >Create a New Admin</a
            >
        </div>
        <br />
        <div>
            <a
                href="/books/index"
                class="btn btn-danger"
                target="_blank"
                rel="noopener noreferrer"
            >
                Books Page For Admin
            </a>
            <br />

            <a
                href="/user/books"
                class="btn btn-danger"
                target="_blank"
                rel="noopener noreferrer"
            >
                Books Page For Users
            </a>
            <p>
                <a href="/books/create"  class="btn btn-danger"
                    target="_blank"
                    rel="noopener noreferrer" >Add New Book</a>
              </p>
        </div>

        <!-- Link to Bootstrap JS and Popper.js -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
